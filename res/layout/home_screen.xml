<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FFE5">
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center" 
        android:background="#308d9e">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="iAlphabets"
            android:textColor="#fff"
            android:textSize="26sp" />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="80dp">
        <ImageView 
            android:id="@+id/feedback"
            android:layout_width="40dp"
        	android:layout_height="40dp"
        	android:layout_margin="20dp"
        	android:src="@drawable/feedback_icon"
            />
         <ImageView 
            android:id="@+id/setting"
            android:layout_width="40dp"
        	android:layout_height="40dp"
        	android:layout_margin="20dp"
        	android:src="@drawable/setting_icon"
            />
          <ImageView 
            android:id="@+id/buy"
            android:layout_width="40dp"
        	android:layout_height="40dp"
        	android:layout_margin="20dp"
        	android:src="@drawable/buy_icon"
            />
        
    </LinearLayout>
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="200dp">
    <Button 
		android:layout_height="60dp" 
		android:text="Learn Alphabets"
		android:layout_width="fill_parent" 
		android:id="@+id/learn_alphabets" 
		android:layout_gravity="center_horizontal"
		android:layout_marginLeft="30dp"
		android:layout_marginRight="30dp"
		android:textSize="20sp"
		style="@style/btnStyleShakespeare"></Button>
     <Button 
		android:layout_height="60dp" 
		android:text="Visualize Alphabets"
		android:layout_width="fill_parent" 
		android:id="@+id/visualize_alphabets" 
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="30dp"
		android:layout_marginLeft="30dp"
		android:layout_marginRight="30dp"
		android:textSize="20sp"
		style="@style/btnStyleShakespeare"></Button>
    </LinearLayout>
     <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="#308d9e"
        android:gravity="center" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Presented by peezbowl.com"
            android:textColor="#fff"
            android:textSize="15sp" />
    </RelativeLayout>
</RelativeLayout>