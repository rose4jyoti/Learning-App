<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Grid_container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="#ffffff" >

    <ImageButton
        android:id="@+id/image1"
        android:layout_width="155dip"
        android:layout_height="192dip"
        android:layout_gravity="left"
        android:background="#ffffff"
        android:scaleType="fitXY" >
    </ImageButton>

    <ImageButton
        android:id="@+id/crossImage1"
        android:layout_width="100dip"
        android:layout_height="122dip"
        android:layout_gravity="left"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/wrongselection"
        android:visibility="invisible" >
    </ImageButton>
    
     <ImageButton
        android:id="@+id/rightImage1"
        android:layout_width="100dip"
        android:layout_height="122dip"
        android:layout_gravity="left"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/rightselection"
        android:visibility="invisible" >
    </ImageButton>

    <ImageButton
        android:id="@+id/image2"
        android:layout_width="155dip"
        android:layout_height="192dip"
        android:layout_gravity="right"
        android:background="#ffffff"
        android:scaleType="fitXY" >
    </ImageButton>

    <ImageButton
        android:id="@+id/crossImage2"
        android:layout_width="100dip"
        android:layout_height="122dip"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/wrongselection"
        android:scaleType="fitXY"
        android:visibility="invisible" >
    </ImageButton>
    
    <ImageButton
        android:id="@+id/rightImage2"
        android:layout_width="100dip"
        android:layout_height="122dip"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/rightselection"
        android:scaleType="fitXY"
        android:visibility="invisible" >
    </ImageButton>

    <ImageButton
        android:id="@+id/image3"
        android:layout_width="155dip"
        android:layout_height="192dip"
        android:layout_gravity="left|bottom"
        android:background="#ffffff"
        android:scaleType="fitXY" >
    </ImageButton>

    <ImageButton
        android:id="@+id/image4"
        android:layout_width="155dip"
        android:layout_height="192dip"
        android:layout_gravity="right|bottom"
        android:background="#ffffff"
        android:scaleType="fitXY" >
    </ImageButton>

    <ImageButton
        android:id="@+id/crossImage3"
        android:layout_width="100dip"
        android:layout_height="122dip"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/wrongselection"
        android:scaleType="fitXY"
        android:visibility="invisible" >
    </ImageButton>
    <ImageButton
        android:id="@+id/rightImage3"
        android:layout_width="100dip"
        android:layout_height="122dip"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/rightselection"
        android:scaleType="fitXY"
        android:visibility="invisible" >
    </ImageButton>

    <ImageButton
        android:id="@+id/crossImage4"
        android:layout_width="100dip"
        android:layout_height="122dip"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/wrongselection"
        android:scaleType="fitXY"
        android:visibility="invisible" >
    </ImageButton>
    <ImageButton
        android:id="@+id/rightImage4"
        android:layout_width="100dip"
        android:layout_height="122dip"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/rightselection"
        android:scaleType="fitXY"
        android:visibility="invisible" >
    </ImageButton>

</FrameLayout>